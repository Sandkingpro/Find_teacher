<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="progressbar_style" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="colorAccent">#FF6C4A</item>
    </style>
    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/bg_chip</item>
        <item name="android:textColor">@color/text_bg_chip</item>
    </style>
    <style name="ColorRatingBar" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">#FF6C4A</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">#FF6C4A</item>
        <item name="colorPrimaryVariant">#FF6C4A</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>